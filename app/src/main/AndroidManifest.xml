<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.owner.easypoly2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLoan"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityLoanEx"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityDeposit"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityDepositEx"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityDepositFuture"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivitySavings"
            android:screenOrientation="portrait"/>
        <activity android:name=".ActivityFV"
            android:screenOrientation="portrait"></activity>
    </application>


</manifest>